<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:scaleType = "centerCrop"
    android:background="@drawable/pokerbck"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.delta.activities.FirstActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_alignParentBottom="true">

    </LinearLayout>

    <Button
        android:id="@+id/reshufflecards"

        android:layout_above="@+id/linearLayout"
        android:background="@drawable/shuffle"
        android:adjustViewBounds="true"
        android:layout_height="60dp"
        android:layout_width="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:onClick="onClickBtn"
       />

    <Button
        android:id="@+id/backtomain"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="Mainmenu"
        android:background="@drawable/backtomain"/>


    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/imageView12"
        android:layout_toStartOf="@+id/imageView12"
        android:adjustViewBounds="true"
        android:maxHeight="160dp"
        android:maxWidth="60dp"
        android:src="@drawable/placeholder123" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView23"
        android:layout_marginBottom="37dp"
        android:layout_toStartOf="@+id/imageView13"
        android:adjustViewBounds="true"
        android:maxHeight="160dp"
        android:maxWidth="60dp"
        android:src="@drawable/placeholder123" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/reshufflecards"
        android:layout_alignTop="@+id/imageView12"
        android:adjustViewBounds="true"
        android:maxHeight="160dp"
        android:maxWidth="60dp"
        android:src="@drawable/placeholder123" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/imageView13"
        android:layout_toEndOf="@+id/imageView13"
        android:adjustViewBounds="true"
        android:maxHeight="160dp"
        android:maxWidth="60dp"
        android:src="@drawable/placeholder123" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView14"
        android:layout_toEndOf="@+id/imageView14"
        android:adjustViewBounds="true"
        android:maxHeight="160dp"

        android:maxWidth="60dp"
        android:src="@drawable/placeholder123" />

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/reshufflecards"

        android:layout_marginBottom="20dp"

        android:layout_toEndOf="@+id/imageView25"
        android:adjustViewBounds="true"
        android:maxHeight="160dp"

        android:maxWidth="60dp"
        android:src="@drawable/placeholder123" />

    <ImageView
        android:id="@+id/imageView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView22"
        android:layout_toStartOf="@+id/imageView22"
        android:adjustViewBounds="true"
        android:maxHeight="160dp"

        android:maxWidth="60dp"
        android:src="@drawable/placeholder123" />

    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView25"
        android:adjustViewBounds="true"
        android:maxHeight="160dp"
        android:maxWidth="60dp"
        android:src="@drawable/placeholder123" />

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_toEndOf="@+id/imageView9"
        android:adjustViewBounds="true"
        android:maxHeight="160dp"
        android:maxWidth="60dp"
        android:src="@drawable/placeholder123" />

    <TextView
        android:id="@+id/winner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView12"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"/>


</RelativeLayout>
