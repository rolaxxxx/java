<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bokermenubck"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    >


    <Button
        android:id="@+id/Gameplay"
        android:layout_height="60dp"
        android:layout_width="80dp"
        android:layout_below="@+id/GameName"
        android:layout_centerHorizontal="true"
        android:background="@drawable/playcut2"
        android:layout_marginTop="90dp"
        android:onClick="PlayGame"

        tools:context="com.delta.activities.SecondActivity"
        />

    <Button
        android:id="@+id/Exitgame"
        android:layout_height="60dp"
        android:layout_width="80dp"
        android:layout_alignStart="@+id/Gameplay"
        android:layout_below="@+id/Gameplay"
        android:layout_marginTop="45dp"
        android:onClick="closeApplication"
        android:background="@drawable/exitcut23"

        />

    <ImageView
        android:id="@+id/GameName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:src="@drawable/main_picture" />
</RelativeLayout>